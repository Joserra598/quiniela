*,
*::after,
*::before {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

.main {
	min-height: 100vh;
	width: 100%;
	background: linear-gradient(to top left, #28b487, #7dd56f);
	display: flex;
}

.sidebar {
	width: 25vw;
	min-height: 100vh;
	background: white;
	/* outline: 5px solid red; */
	display: flex;
	flex-direction: column;
}

.container-index {
	flex-basis: 100%;
	/* background: pink; */
}

.new {
	background: white;
}

.existing {
	background: rgb(238, 238, 238);
}

.view {
	width: 75vw;
	min-height: 100vh;
	background-color: rgba(0, 0, 0, 0.6);
	backdrop-filter: blur(15px);
}
